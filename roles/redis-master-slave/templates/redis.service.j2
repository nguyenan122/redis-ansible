[Unit]
Description=Redis data structure server
Documentation=https://redis.io/documentation
Wants=network-online.target
After=network-online.target

[Service]
ExecStart={{ redis_install_dir }}/bin/redis-server {{ redis_install_dir }}/conf/6379.conf --supervised systemd --daemonize no
ExecStop={{ redis_install_dir }}/bin/redis-cli {% if redis_master_auth -%} -a {{ redis_master_auth }} {% endif -%}  SHUTDOWN
LimitNOFILE=10032
User=redis
Group=redis

[Install]
WantedBy=multi-user.target
